<%- include('../layouts/header'); %>
    <%- include('../layouts/nav'); %>
    <div class="container">
        <h3 class="mt-3">Editar <%= item[0].nombre %></h3>
        <form class="form-control mt-2" action="/edit/<%= item[0].codigo %>" method="post">
                <div>
                    <label class="form-label" for="">Codigo del Producto:</label>
                    <input class="form-control" type="text" name="codigo" value="<%= item[0].codigo %>">
                </div>
                <div>
                    <label class="form-label" for="">Nombre del Producto:</label>
                    <input class="form-control" type="text" name="nombre" value="<%= item[0].nombre %>">
                </div>
                <div>
                    <label class="form-label" for="">Precio del Producto:</label>
                    <input class="form-control" type="number" name="precio" value="<%= item[0].precio %>">
                </div>
                <div>
                    <label class="form-label" for="">Cantidad:</label>
                    <input class="form-control" type="number" name="cantidad" value="<%= item[0].cantidad %>">
                </div>
                <div class="d-grid gap-2 mt-2">
                    <button class="btn btn-info" type="submit">Actualizar</button>
                    <a class="btn btn-danger" href="/">Cancelar</a>
                </div>
        </form>
    </div>
<%- include('../layouts/footer'); %>